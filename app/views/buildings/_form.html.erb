<%= form_for @building do |form| %>
  <% if building.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(building.errors.count, "error") %> prohibited this building from being saved:</h2>

      <ul>
      <% building.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :property_name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :rental_fees %>
    <%= form.number_field :rental_fees %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :build_year %>
    <%= form.number_field :build_year %>
  </div>

  <div class="field">
    <%= form.label :remark %>
    <%= form.text_area :remark %>
  </div>
  <hr>

  <h3>Add nearest stations</h3>
  <%= form.fields_for :stations do |builder| %>

    <div class="field">
      <%= builder.label :railway_name %>
      <%= builder.text_field :railway_name %>
    </div>

    <div class="field">
      <%= builder.label :station_name %>
      <%= builder.text_field :station_name %>
    </div>

    <div class="field">
      <%= builder.label :minutes_to_walk %>
      <%= builder.number_field :minutes_to_walk %>
    </div>

  <% end %>
  <hr>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
